<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/21.0.7"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.fita.vetclinic.controllers.doctor.PrescriptionSceneController"
            prefWidth="900" prefHeight="600"
            style="-fx-background-color: #f8f9fa; -fx-padding: 20;">

    <top>
        <Label text="📋 Danh sách đơn thuốc"
               style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"
               BorderPane.alignment="CENTER"/>
    </top>

    <center>
        <TableView fx:id="tblPrescriptions" prefHeight="500">
            <columns>
                <TableColumn fx:id="colDate" text="Ngày kê đơn" prefWidth="120"/>
                <TableColumn fx:id="colPet" text="Tên thú cưng" prefWidth="150"/>
                <TableColumn fx:id="colDoctor" text="Bác sĩ" prefWidth="150"/>
                <TableColumn fx:id="colMedication" text="Thuốc" prefWidth="250"/>
                <TableColumn fx:id="colNote" text="Ghi chú" prefWidth="200"/>
            </columns>
        </TableView>
    </center>

    <bottom>
        <HBox spacing="15" alignment="CENTER_RIGHT">
            <Button fx:id="btnAdd" text="➕ Thêm" style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-background-radius: 10;"/>
            <Button fx:id="btnEdit" text="✏️ Sửa" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 10;"/>
            <Button fx:id="btnDelete" text="🗑️ Xoá" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-background-radius: 10;"/>
        </HBox>
    </bottom>
</BorderPane>
