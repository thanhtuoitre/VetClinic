<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="600" prefWidth="800" style="-fx-background-color: linear-gradient(to bottom right, #a1c4fd, #c2e9fb);" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.fita.vetclinic.controllers.NotificationController">

    <!-- Header với nút quay về -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="15" style="-fx-padding: 20;">
            <Button onAction="#handleBack" text="← Quay về" />
            <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #334e68;" text="🔔 Thông báo" />
            <Pane HBox.hgrow="ALWAYS" />
        </HBox>
    </top>

    <!-- Danh sách thông báo -->
    <center>
        <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;">
            <VBox fx:id="notificationList" spacing="12" style="-fx-padding: 10;" />
        </ScrollPane>
    </center>

    <!-- Footer -->
    <bottom>
        <HBox alignment="CENTER" style="-fx-padding: 10;">
            <Label style="-fx-text-fill: #7a8ba6; -fx-font-size: 13px;" text="Thiết kế bởi Nhật Thành software" />
        </HBox>
    </bottom>

</BorderPane>
