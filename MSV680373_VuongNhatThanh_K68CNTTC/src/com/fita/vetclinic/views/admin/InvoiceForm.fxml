<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/21.0.7"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.fita.vetclinic.controllers.admin.InvoiceFormController"
            prefWidth="500" prefHeight="600"
            style="-fx-background-color: white; -fx-background-radius: 10;">

    <center>
        <VBox spacing="15" alignment="TOP_CENTER" style="-fx-padding: 30;">
            <Label text="💳 Thông tin hóa đơn"
                   style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2e3d49;" />

            <TextField fx:id="txtInvoiceId" promptText="Mã hóa đơn" editable="false" />
            <TextField fx:id="txtPetName" promptText="Tên thú cưng" />
            <TextField fx:id="txtServiceName" promptText="Dịch vụ" />
            <TextField fx:id="txtQuantity" promptText="Số lượng" />
            <DatePicker fx:id="dpDate" promptText="Ngày lập hóa đơn" />
            <TextField fx:id="txtTotalAmount" promptText="Tổng tiền (VNĐ)" />

            <!-- ComboBox items will be set in controller -->
            <ComboBox fx:id="cbStatus" promptText="Trạng thái" />

            <HBox spacing="10" alignment="CENTER_RIGHT" style="-fx-padding: 10 0 0 0;">
                <Button fx:id="btnCancel" text="Huỷ"
                        style="-fx-background-color: #e0e0e0; -fx-text-fill: #444; -fx-background-radius: 8;" />
                <Button fx:id="btnSave" text="Lưu"
                        style="-fx-background-color: #2e7d32; -fx-text-fill: white; -fx-background-radius: 8;" />
            </HBox>
        </VBox>
    </center>
</BorderPane>
