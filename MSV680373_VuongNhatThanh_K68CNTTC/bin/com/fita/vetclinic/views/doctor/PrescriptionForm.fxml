<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/21.0.7"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.fita.vetclinic.controllers.doctor.PrescriptionFormController"
            prefWidth="500" prefHeight="500"
            style="-fx-background-color: white; -fx-background-radius: 12;">

    <center>
        <VBox spacing="15" alignment="CENTER_LEFT" style="-fx-padding: 30;">
            <Label text="📑 Đơn thuốc"
                   style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />

            <ComboBox fx:id="cbPet" promptText="Chọn thú cưng" prefWidth="400"/>
            <ComboBox fx:id="cbDoctor" promptText="Chọn bác sĩ kê đơn" prefWidth="400"/>

            <DatePicker fx:id="dpDate" promptText="Ngày kê đơn" prefWidth="400"/>

            <TextField fx:id="txtMedication" promptText="Tên thuốc" prefWidth="400"/>
            <TextArea fx:id="txtNote" promptText="Ghi chú (liều lượng, cách dùng...)" prefWidth="400" prefHeight="100" wrapText="true"/>

            <HBox spacing="15" alignment="CENTER_RIGHT" style="-fx-padding: 10 0 0 0;">
                <Button fx:id="btnCancel" text="Huỷ"
                        style="-fx-background-color: #bdc3c7; -fx-text-fill: black; -fx-background-radius: 10;" />
                <Button fx:id="btnSave" text="Lưu"
                        style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-background-radius: 10;" />
            </HBox>
        </VBox>
    </center>
</BorderPane>
